@model List<Article>

@{
    ViewData["Title"] = "List";
}

<div class="container">
    <div class="row">
        @foreach (var article in Model)
        {
            <div class="col-sm-6">
                <article>
                    <header>
                        <h2>
                            <a asp-action="Details" asp-route-id="@article.Id">@article.Title</a>
                        </h2>
                    </header>
                    <p>
                        @Html.DisplayFor(modelItem => article.Content)
                    </p>
                    <small class="author">
                        @Html.DisplayFor(modelItem => article.DateAdded)
                    </small>
                    <footer class="pull-right">
                        <a class="btn btn-success btn-xs" asp-action="Edit" asp-route-id="@article.Id">Edit</a>
                        <a class="btn btn-danger btn-xs" asp-action="Delete" asp-route-id="@article.Id">Delete</a>
                    </footer>
                </article>
            </div>
        }
    </div>
</div>